<UserControl x:Class="UI_Chung.UCQuanLySach"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UI_Chung"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row ="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Button x:Name ="btnQuanLySach" Content="Quản lý Sách" Width="100" Margin="5" Click="btnQuanLySach_Click" />
            <Button x:Name ="btnQuanLyTacGia" Content="Quản lý Tác Giả" Width="100" Margin="5" Click="btnQuanLyTacGia_Click" />
            <Button x:Name ="btnQuanLyTheLoai" Content="Quản lý Thể Loại" Width="100" Margin="5" Click="btnQuanLyTheLoai_Click" />
        </StackPanel>
        
            <TabControl Grid.Row="1" x:Name="MainTabControl" SelectedIndex="0" Margin="10,10,10,10">
                <!-- Tab Quản lí sách (mở mặc định) -->

            </TabControl>
        
    </Grid>
    
</UserControl>
